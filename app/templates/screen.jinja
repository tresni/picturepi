<form id="screen" method="POST" action="/screen">
    {{ form.csrf_token }}
    <div class="form-row">
        <div class="col-4"></div>
        <div class="col">
        <legend>Screen Backlight</legend>
        </div>
    </div>
    <div class="form-row">
    <div class="col-4"></div>
    <div class="form-group col-2">
    From:
	{{ form.on(class_='form-control') }}
    </div>
    <div class="form-group col-2">
    To:
    {{ form.off(class_='form-control') }}.
    </div>
    <div class="form-group col-1">
        <br>
        <input type="submit" class="btn btn-primary" value="Save">
    </div>
    <div class="col-3"></div>
    </div>
</form>
